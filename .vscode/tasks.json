{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: gcc compilar archivo activo",
			"command": "/usr/bin/gcc",
			"args": [
				"-ggdb3",
				"-Wall",
				"-Werror",
				"-Wno-unused",
				"-std=c11",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}